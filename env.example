# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/mood-palette-generator

# AI Service API Key (OpenRouter or OpenAI)
# Use OPENROUTER_API_KEY for OpenRouter (recommended) or OPENAI_API_KEY for OpenAI
OPENROUTER_API_KEY=your_openrouter_api_key_here
# OPENAI_API_KEY=your_openai_api_key_here

# AI Model (optional, defaults to openai/gpt-3.5-turbo)
# For OpenRouter, you can use: openai/gpt-3.5-turbo, openai/gpt-4, anthropic/claude-3-sonnet, etc.
AI_MODEL=openai/gpt-3.5-turbo

# Server Port (optional, defaults to 3000)
PORT=3000 